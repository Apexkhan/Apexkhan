def secret_formula(started):
      hardwork = started*700
      dedication = hardwork / 100000
      blood_tears = dedication / .087
      
      return hardwork,dedication,blood_tears
      
start_point = 20000
hardwork, dedication, blood_tears = secret_formula(start_point)
      
      
print("With a starting point of: {}".format(start_point))
      
      
print(f"We'd have to practice {hardwork} hardwork in hours {dedication} dedication in mins, and {blood_tears} blood,sweat,and tears in volumes.")
      
      
start_point = start_point/100
      
print("We can also do that this way:")
formula = secret_formula(start_point)
print("We'd have {} championships, {} talent, and {} careers.".format(*formula))


